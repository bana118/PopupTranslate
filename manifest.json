{
    "name": "PopUpTranslate",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "This is an translater of Chrome (includes PDF file)",
    "permissions": [
        "contextMenus",
        "tabs",
        "storage"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/content.js"],
        "css": ["css/header.css"]
      }],
    "background": {
      "persistent": false,
      "scripts": [
        "js/background.js",
        "js/glottologist.min.js"
      ]
    },
    "options_ui": {
      "page": "options/options.html",
      "chrome_style": true
    }
  }